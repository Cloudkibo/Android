<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.opengl.GLSurfaceView
        android:id="@+id/glview_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.view.SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleVideo"
        android:src="@drawable/ic_camera"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleAudio"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_alignTop="@+id/toggleVideo"
        android:layout_toRightOf="@+id/toggleVideo"
        android:layout_toEndOf="@+id/toggleVideo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendFile"
        android:src="@drawable/ic_file"
        android:layout_alignTop="@+id/toggleAudio"
        android:layout_toRightOf="@+id/toggleAudio"
        android:layout_toEndOf="@+id/toggleAudio" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startChat"
        android:src="@drawable/ic_chat"
        android:layout_alignTop="@+id/sendFile"
        android:layout_toRightOf="@+id/sendFile"
        android:layout_toEndOf="@+id/sendFile" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startScreenSharing"
        android:src="@drawable/ic_projects"
        android:layout_above="@+id/toggleVideo"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endCallImageButton"
        android:src="@drawable/hangup"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/startChat"
        android:layout_marginStart="38dp" />

</RelativeLayout>