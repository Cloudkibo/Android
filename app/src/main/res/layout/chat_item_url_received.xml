<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="50dp"
        >

        <LinearLayout
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_gray"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="@dimen/pad_15dp"
            android:paddingTop="@dimen/pad_5dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:id="@+id/fileItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_file"/>

                <LinearLayout
                    android:id="@+id/link_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray_light"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/link_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/txt_20sp"
                        android:layout_gravity="start"
                        />
                    <TextView
                        android:id="@+id/link_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://www.google.com"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_gravity="start"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView

                android:id="@+id/msgbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.google.com"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/txt_14sp"
                android:layout_gravity="start"
                android:autoLink="web"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/lblContactDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textColor="@color/main_color_gray_dk"
                    android:textSize="@dimen/txt_13sp"
                    android:paddingRight="@dimen/pad_5dp"
                    />


            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
