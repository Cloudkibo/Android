<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        >

        <LinearLayout
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_green"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/pad_5dp"
            android:paddingBottom="@dimen/pad_5dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/contact_image"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar"/>

                <LinearLayout
                    android:id="@+id/link_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray_light"
                    android:padding="5dp">

                    <TextView

                        android:id="@+id/link_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/txt_20sp"
                        android:layout_gravity="start"
                        />

                    <TextView

                        android:id="@+id/link_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://www.google.com"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_gravity="start"
                        />
                 </LinearLayout>

            </LinearLayout>

            <TextView

                android:id="@+id/msgbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.google.com"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/txt_14sp"
                android:layout_gravity="start"
                android:autoLink="web"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/lblContactDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textColor="@color/main_color_gray_dk"
                    android:textSize="@dimen/txt_13sp"
                    android:paddingRight="@dimen/pad_5dp"/>

                <TextView
                    android:id="@+id/lblContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="seen"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_13sp"
                    android:layout_gravity="right"
                    android:gravity="right"/>


            </LinearLayout>
