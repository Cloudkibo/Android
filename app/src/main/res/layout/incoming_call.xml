<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:background="@drawable/actionbar_bg">

        <TextView
            android:id="@+id/incomingCallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_chat_item"
            android:text="Calling"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameOfCallerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_chat_item"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:background="@drawable/actionbar_bg">

        <TextView
            android:id="@+id/incomingCallStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/com_accountkit_input_text_size"
            android:text="Contacting..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pad_30dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingBottom="@dimen/pad_15dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile_pic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/pad_30dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingBottom="@dimen/pad_15dp"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/pickCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:layout_gravity="center" />

        <Space
            android:layout_width="80sp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/rejectCall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/hangup"
            android:layout_gravity="center"
            android:layout_weight="0.06" />

    </LinearLayout>


</LinearLayout>