<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:layout_marginRight="50dp"
		>
		<LinearLayout
			android:id="@+id/v1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/chat_bubble_gray"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:layout_marginTop="10dp"
			android:paddingTop="@dimen/pad_5dp"
			android:paddingBottom="@dimen/pad_5dp">
			<ImageView
				android:id="@+id/row_stamp"
				android:contentDescription="Image"
				android:layout_margin="5dp"
				android:layout_width="210dp"
				android:layout_height="210dp"/>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_gravity="right"
				android:paddingRight="5dp">

				<TextView
					android:id="@+id/lblContactDisplayName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="12:30 PM"
					android:textColor="@color/main_color_gray_dk"
					android:textSize="@dimen/txt_13sp"
					android:paddingRight="@dimen/pad_5dp"/>


			</LinearLayout>
		</LinearLayout>



		</RelativeLayout>
</RelativeLayout>
