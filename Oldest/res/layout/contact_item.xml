<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/pad_5dp" 
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_online"
        android:layout_marginRight="@dimen/pad_5dp" />

    <ImageView
        android:id="@+id/imgContactListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/pad_10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblContactDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="TextView"
                android:textColor="@color/main_color_green"
                android:textSize="@dimen/txt_15sp" />

        </LinearLayout>

         <TextView
             android:id="@+id/lblContactPhone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:ellipsize="end"
             android:lines="1"
             android:text="TextView"
             android:textColor="@color/main_color_gray_dk"
             android:textSize="@dimen/txt_12sp" />

          <TextView
            android:id="@+id/lblContactStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/main_color_gray_lt"
            android:maxLines="2"
            android:ellipsize="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginLeft="@dimen/pad_5dp" >

    </LinearLayout>

</LinearLayout>
